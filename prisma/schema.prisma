generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int        @id @default(autoincrement())
  email       String     @unique
  firstname   String
  lastname    String
  status      UserStatus
  birthDate   DateTime
  phoneNumber String     @unique
}

enum UserStatus {
  MEMBER
  SUSPENDED
  BANNED
  ADMIN
}
